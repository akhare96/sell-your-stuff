
<div class="container text-center">
    <div class="fs-2">
        <b> Showing Item page for: <%=@post.name%> </b>
        <br><br>
    </div>

    <b> Item Image(s) </b><br><br>

    <% if @post.images.attached? %>
        <% @post.images.each do |image| %>
            <div class="inline-block">
            <%= image_tag image, width: "200px" %>
            </div>
        <% end %>
    <% end %>
</div>